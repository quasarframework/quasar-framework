.q-menu
  display: inline-block
  max-width: $menu-max-width
  max-height: 65vh
  outline: 0
  border-radius: $generic-border-radius
  box-shadow: $menu-box-shadow
  background: $menu-background
  opacity: 0

  &__container
    position: fixed
    z-index: $z-menu
    contain: layout

  &--square
    border-radius: 0
